<section id="rates" class="py-24 bg-warm-white relative">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center mb-16">
            <h2 class="font-serif text-3xl md:text-5xl font-bold text-fairfield-blue-950 mb-4">Rates</h2>
            <div class="w-12 h-1 bg-fairfield-blue-600 mx-auto rounded-full"></div>
        </div>

        <div class="bg-white rounded-[2rem] shadow-sm border border-fairfield-sand-100 p-8 md:p-16">
            <div class="space-y-12">
                <!-- Daily Rates -->
                <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                    <div class="flex-1">
                        <h3 class="font-serif text-2xl font-bold text-fairfield-blue-900 mb-2">Daily Rates</h3>
                        <p class="text-fairfield-sand-600 italic">Per 30-minute dog walking</p>
                    </div>
                    <div class="flex items-baseline gap-2">
                        <span class="text-3xl font-serif font-bold text-fairfield-blue-600">$25.00</span>
                    </div>
                </div>

                <div class="h-px bg-gradient-to-r from-transparent via-fairfield-sand-200 to-transparent"></div>

                <!-- Sleepovers -->
                <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                    <div class="flex-1">
                        <div class="flex items-center gap-3 mb-2">
                            <h3 class="font-serif text-2xl font-bold text-fairfield-blue-900">Sleepovers</h3>
                        </div>
                        <p class="text-fairfield-sand-600 italic mb-1">Per night</p>
                        <p class="text-sm text-fairfield-sand-400 font-medium">(6 pm - 6 am or 7 pm - 7 am)</p>
                    </div>
                    <div class="flex items-baseline gap-2">
                        <span class="text-3xl font-serif font-bold text-fairfield-blue-600">$100.00</span>
                    </div>
                </div>

                <div class="h-px bg-gradient-to-r from-transparent via-fairfield-sand-200 to-transparent"></div>

                <!-- Holiday Surcharge -->
                <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                    <div class="flex-1">
                        <h3 class="font-serif text-2xl font-bold text-fairfield-blue-900 mb-2">Holiday Surcharge</h3>
                        <p class="text-fairfield-sand-600 italic leading-snug">Additional fee applies to visits that fall on a holiday.</p>
                    </div>
                    <div class="flex items-baseline gap-2">
                        <span class="text-3xl font-serif font-bold text-fairfield-blue-600">$10.00</span>
                    </div>
                </div>
            </div>

            <div class="mt-16 pt-8 border-t border-fairfield-sand-100 flex flex-col md:flex-row items-center justify-center gap-6 text-center">
                <p class="text-fairfield-sand-500 font-medium italic">All rates include daily updates and backyard play time.</p>
            </div>
        </div>
    </div>
</section>
