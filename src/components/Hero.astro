<section class="h-[730px] pt-20 flex items-center relative overflow-hidden">
    <div class="absolute inset-0 z-0 opacity-20 bg-[url('/images/fairfield-lighthouse.jpg')] bg-cover bg-center"></div>
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 w-full">
        <div class="grid md:grid-cols-2 gap-12 items-center">
            <div class="space-y-6 text-center md:text-left">
                <span class="inline-block px-4 py-1.5 rounded-full bg-fairfield-blue-100 text-fairfield-blue-800 font-semibold text-sm tracking-wide uppercase mb-2">Fairfield, CT</span>
                <h1 class="font-serif text-4xl md:text-5xl lg:text-6xl font-bold text-fairfield-blue-950 leading-tight">
                    Boutique Dog Boarding <br class="hidden md:block"/> in Fairfield, CT
                </h1>
                <p class="text-lg md:text-xl text-fairfield-sand-800 max-w-lg mx-auto md:mx-0 leading-relaxed font-light">
                    A boutique boarding experience where your pup is the only guest. Gentle care, backyard play, and zero kennel stress.
                </p>
                <div class="pt-4 flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
                    <a href="#contact" class="px-8 py-4 rounded-full bg-fairfield-blue-600 text-white font-semibold text-lg hover:bg-fairfield-blue-700 transition-all shadow-lg hover:shadow-xl hover:-translate-y-0.5">
                        Message Cesar
                    </a>
                    <a href="#about" class="px-8 py-4 rounded-full bg-white text-fairfield-sand-700 border border-fairfield-sand-200 font-semibold text-lg hover:bg-fairfield-sand-50 transition-all hover:border-fairfield-sand-300">
                        Learn More
                    </a>
                </div>
            </div>
            <div class="relative hidden md:block group">
                <div class="absolute -inset-1 bg-fairfield-blue-200 rounded-2xl blur opacity-30 group-hover:opacity-50 transition duration-1000"></div>
                <div class="relative bg-warm-beige rounded-2xl overflow-hidden shadow-2xl aspect-square">
                    <img src="/images/cesar-beach-2.jpg" alt="Cesar holding a happy dog at a Fairfield beach" class="object-cover w-full h-full transition-transform duration-700 hover:scale-105">
                </div>
                <!-- Decorative element -->
                <div class="absolute -bottom-6 -right-6 w-32 h-32 bg-fairfield-blue-50 rounded-full -z-10"></div>
            </div>
        </div>
    </div>
</section>
