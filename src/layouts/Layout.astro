---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />

		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content="Boutique dog boarding and walking in Fairfield, CT. Cesar Dog Care offers personalized, one-on-one attention for your pup in a loving home environment." />
		<meta name="keywords" content="dog boarding fairfield ct, dog walking fairfield, pet sitting fairfield, cesar dog care, personalized dog care ct" />
		<meta name="author" content="Cesar Dog Care" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://cesardogcare.com/" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content="Personalized boutique dog boarding and walking in Fairfield, CT. Your pup stays in a loving home, not a kennel." />
		<meta property="og:image" content="/images/cesar-beach-2.jpg" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://cesardogcare.com/" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content="Personalized boutique dog boarding and walking in Fairfield, CT. Your pup stays in a loving home, not a kennel." />
		<meta property="twitter:image" content="/images/cesar-beach-2.jpg" />

		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Merriweather:ital,wght@0,300;0,400;0,700;1,400&display=swap" rel="stylesheet">
	</head>
	<body class="font-sans antialiased text-stone-700 bg-[#F9F8F6]">
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--fairfield-blue: #025aa2;
		--fairfield-sand: #8e9190;
		--fairfield-deep: #072949;
		--warm-white: #F9F8F7;
		--warm-beige: #F1EFE9;
	}

	body {
		background-color: var(--warm-white);
		color: #252626;
	}
</style>
